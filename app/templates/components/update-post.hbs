{{#if updatePostForm}}
<h4>Update {{post.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=post.body}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=post.name}}
      </div>

      <div class="form-group">
        <label for="date">Date posted</label>
        {{input type="date" value=date id="date" placeholder=post.date}}
      </div>

      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'updatePostForm'}}>Update</button>
{{/if}}
