{{#if addNewPost}}
<h1>New Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="date">Date Posted</label>
      {{input type="date" value=date id="date"}}
    </div>

    <button {{action 'savePost1'}}>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
